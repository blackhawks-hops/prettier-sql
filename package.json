{
    "name": "@blackhawks-hops/prettier-sql",
    "version": "0.1.0",
    "description": "Prettier plugin for VERY opinionated SQL file and snippet formatting",
    "main": "dist/index.js",
    "exports": {
        ".": "./dist/index.js",
        "./tag": "./dist/tag.js"
    },
    "files": ["dist"],
    "scripts": {
        "build": "tsc",
        "test": "jest",
        "pretty": "prettier --write src/**/*",
        "lint": "eslint . --ext .ts",
        "typecheck": "tsc --noEmit",
        "prepublishOnly": "npm run build"
    },
    "publishConfig": {
        "access": "public"
    },
    "prettier": {
        "tabWidth": 4,
        "printWidth": 120
    },
    "keywords": ["prettier", "plugin", "sql", "formatter"],
    "author": "blackhawks-hops",
    "license": "MIT",
    "devDependencies": {
        "@types/jest": "^29.5.0",
        "@types/node": "^18.15.11",
        "@typescript-eslint/eslint-plugin": "^5.57.1",
        "@typescript-eslint/parser": "^5.57.1",
        "eslint": "^8.38.0",
        "jest": "^29.5.0",
        "prettier": "^2.8.7",
        "ts-jest": "^29.1.0",
        "typescript": "^5.0.3"
    },
    "peerDependencies": {
        "prettier": "^2.0.0 || ^3.0.0"
    }
}
